.active {
  background: #f2f2f2;  
}
[user-item-component] {
  .item-box {
    cursor: pointer;
    padding: 15px 5px;
    border-bottom: 1px solid #ccc;
    .item-img {
      float: left;
      & > img {
        width: 40px;
        height: 40px;
        border-radius: 50%;  
      }
    }
    .item-user {
      height: 40px;
      margin-left: 45px;
      & > div {
        height: 20px;
        line-height: 20px;
        & > p {
          white-space: nowrap;
          overflow: hidden;
          text-overflow: ellipsis;  
        }
        .user-name {
          font-size: 14px;  
        }
        .user-msg {
          color: #999;  
        }
      }  
    }
  }  
}