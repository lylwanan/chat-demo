.dialog-box {
  position: absolute;
  border-radius: 5px;
  min-width: 340px;
  min-height: 290px;
  background-color: #fdfdfd;
  border: 1px solid #c1c1c1;
  box-shadow: 10px 10px 10px #ccc;
  .dialog-title {
    height: 50px;
    background: #f5f5f5;
    border-bottom: 1px solid #ccc;
  }
  .dialog-content {
    position: absolute;
    top: 51px;
    right: 0;
    bottom: 0;
    left: 0;
    .left-list {
      width: 200px;
      position: absolute;
      top: 0;
      left: 0;
      bottom: 0;
      overflow-y: auto;
      border-right: 1px solid #ccc;
    }
    .right-msg {
      position: absolute;
      left: 201px;
      right: 0;
      top: 0;
      bottom: 0;
      .msg-content {
        width: 100%;
        position: absolute;
        top: 0;
        bottom: 100px;
        overflow-y: auto;
        border-bottom: 1px solid #ccc;  
      }
      .msg-edit {
        position: absolute;
        height: 87px;
        right: 5px;
        bottom: 5px;
        left: 5px;
        .edit-box {
          padding: 3px 8px;
          & > textarea {
            padding: 0;
            overflow-x: hidden;
            overflow-y: auto;
            width: 100%;
            height: 45px;
            resize: none;
            line-height: 1.5;
            border: none;
            outline: none;
          }
        }
        .edit-btn {
          text-align: right;
          & > a {
            display: inline-block;
            width: 55px;
            color: #fff;
            margin-right: 5px;
            padding: 5px;
            border-radius: 3px;
            text-align: center;
            text-decoration: none;  
            background-color: #12b7f5;
            &:active {
              background-color: #1aabf5;
            }
          }  
        }
      }
    }
  }
}